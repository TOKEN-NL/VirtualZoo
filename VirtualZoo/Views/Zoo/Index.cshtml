@model VirtualZoo.ViewModels.ZooViewModel

<h2>Zoo Dashboard</h2>

<div class="d-flex flex-wrap gap-2 mb-4">
    <form method="post" asp-action="Sunrise">
        <button class="btn btn-success w-100" style="min-width: 150px;">Sunrise</button>
    </form>
    <form method="post" asp-action="Sunset">
        <button class="btn btn-dark w-100" style="min-width: 150px;">Sunset</button>
    </form>
    <form method="post" asp-action="FeedingTime">
        <button class="btn btn-warning w-100" style="min-width: 150px;">Feeding Time</button>
    </form>
    <form method="post" asp-action="CheckConstraints">
        <button class="btn btn-info w-100" style="min-width: 150px;">Check Constraints</button>
    </form>
    <form method="post" asp-action="AutoAssign">
        <button class="btn btn-primary w-100" style="min-width: 150px;">AutoAssign</button>
    </form>
</div>

<hr />
<h3>Animals</h3>
<div style="max-height: 200px; overflow-y: auto;">
    <table class="table table-sm table-striped">
        <thead><tr><th>Name</th><th>Species</th></tr></thead>
        <tbody>
            @foreach (var animal in Model.Animals)
            {
                <tr><td>@animal.Name</td><td>@animal.Species</td></tr>
            }
        </tbody>
    </table>
</div>

<h3>Enclosures</h3>
<div style="max-height: 200px; overflow-y: auto;">
    <table class="table table-sm table-striped">
        <thead><tr><th>Name</th><th>Size</th></tr></thead>
        <tbody>
            @foreach (var enc in Model.Enclosures)
            {
                <tr><td>@enc.Name</td><td>@enc.Size</td></tr>
            }
        </tbody>
    </table>
</div>

<h3>Categories</h3>
<div style="max-height: 200px; overflow-y: auto;">
    <table class="table table-sm table-striped">
        <thead><tr><th>Name</th></tr></thead>
        <tbody>
            @foreach (var cat in Model.Categories)
            {
                <tr><td>@cat.Name</td></tr>
            }
        </tbody>
    </table>
</div>

