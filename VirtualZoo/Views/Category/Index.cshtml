@model List<VirtualZooShared.Models.Category>

<h2>Categories List</h2>

<div style="display: flex; align-items: center; gap: 10px;">
    <form method="get" action="/Category/Index">
        <input type="text" name="searchTerm" placeholder="Zoek op naam" />
        <button type="submit">Zoeken</button>
    </form>
    <a href="@Url.Action("Create", "Category")" class="btn btn-primary">Create New Category</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr onclick="window.location='@Url.Action("Details", "Category", new { id = category.Id })';" style="cursor: pointer;">
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.Id })">Edit</a>
                    <a href="@Url.Action("Delete", "Category", new { id = category.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
