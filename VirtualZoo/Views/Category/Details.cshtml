@model VirtualZooShared.Models.Category

@{
    var animals = ViewBag.Animals as List<VirtualZooShared.Models.Animal> ?? new();
    var assignedAnimals = animals.Where(a => a.CategoryId == Model.Id).ToList();
}

<h2>Category Details</h2>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
</div>

@if (assignedAnimals.Any())
{
    <h4>Animals in this category:</h4>
    <ul>
        @foreach (var animal in assignedAnimals)
        {
            <li>@animal.Name (@animal.Species)</li>
        }
    </ul>
}
else
{
    <p><em>No animals assigned to this category.</em></p>
}

<a href="@Url.Action("Index", "Category")">Back to Category List</a>
