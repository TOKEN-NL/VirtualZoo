@model VirtualZooShared.Models.Animal
@{
    var categories = ViewBag.Categories as List<VirtualZooShared.Models.Category> ?? new();
    var enclosures = ViewBag.Enclosures as List<VirtualZooShared.Models.Enclosure> ?? new();
    var catName = categories.FirstOrDefault(c => c.Id == Model.CategoryId)?.Name ?? "No Category";
    var encName = enclosures.FirstOrDefault(e => e.Id == Model.EnclosureId)?.Name ?? "No Enclosure";
}

<h2>Animal Details</h2>

<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Species:</strong> @Model.Species</p>
    <p><strong>Category:</strong> @catName</p>
    <p><strong>Enclosure:</strong> @encName</p>
    <p><strong>Size:</strong> @Model.Size</p>
    <p><strong>Dietary Class:</strong> @Model.DietaryClass</p>
    <p><strong>Activity Pattern:</strong> @Model.ActivityPattern</p>
    <p><strong>Prey:</strong> @Model.Prey</p>
    <p><strong>Space Requirement:</strong> @Model.SpaceRequirement</p>
    <p><strong>Security Level:</strong> @Model.SecurityRequirement</p>
</div>

<!-- Eventuele acties -->
<div>
    <form method="post" action="/Animal/SunriseResult"><input type="hidden" name="id" value="@Model.Id" /><button type="submit">Sunrise</button></form>
    <form method="post" action="/Animal/SunsetResult"><input type="hidden" name="id" value="@Model.Id" /><button type="submit">Sunset</button></form>
    <form method="post" action="/Animal/FeedingTimeResult"><input type="hidden" name="id" value="@Model.Id" /><button type="submit">Feeding Time</button></form>
    <form method="post" action="/Animal/CheckConstraintsResult"><input type="hidden" name="id" value="@Model.Id" /><button type="submit">Check Constraints</button></form>
</div>

<a href="@Url.Action("Index", "Animal")">Back to Animal List</a>
